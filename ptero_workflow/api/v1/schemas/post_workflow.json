{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "POST /v1/workflows",

    "type": "object",
    "properties": {
        "inputs": { "type": "object" },
        "tasks": { "$ref": "#/definitions/taskDictionary" },
        "links": { "$ref": "#/definitions/linkList" },
        "parallelBy": { "$ref": "#/definitions/name" }
    },
    "required": ["inputs", "tasks", "links"],
    "additionalProperties": false,

    "definitions": {
        "name": {
            "type": "string",
            "minLength": 1
        },

        "taskDictionary": {
            "type": "object",
            "minProperties": 1,
            "patternProperties": {
                "^.+$": { "$ref": "#/definitions/task" }
            },
            "additionalProperties": false
        },

        "task": {
            "type": "object",
            "properties": {
                "methods": {
                    "type": "array",
                    "minItems": 1,
                    "items": { "$ref": "#/definitions/method" }
                },
                "parallelBy": { "$ref": "#/definitions/name" }
            },
            "required": ["methods"],
            "additionalProperties": false
        },

        "method": { "oneOf": [
            { "$ref": "#/definitions/workflow" },
            { "$ref": "#/definitions/shellCommandMethod" }
        ]},

        "workflow": {
            "type": "object",
            "properties": {
                "tasks": { "$ref": "#/definitions/taskDictionary" },
                "links": { "$ref": "#/definitions/linkList" }
            },
            "required": ["tasks", "links"],
            "additionalProperties": false
        },

        "shellCommandMethod": {
            "type": "object",
            "properties": {
                "name": { "$ref": "#/definitions/name" },
                "parameters": { "type": "object" },
                "service": {
                    "type": "string",
                    "pattern": "^ShellCommand$"
                }
            },
            "required": ["name", "parameters", "service"],
            "additionalProperties": false
        },

        "linkList": {
            "type": "array",
            "minItems": 2,
            "items": { "$ref": "#/definitions/link" }
        },

        "link": {
            "type": "object",
            "properties": {
                "destination": { "$ref": "#/definitions/name" },
                "destinationProperty": { "$ref": "#/definitions/name" },
                "source": { "$ref": "#/definitions/name" },
                "sourceProperty": { "$ref": "#/definitions/name" }
            },
            "required": [
                "destination",
                "destinationProperty",
                "source",
                "sourceProperty"
            ],
            "additionalProperties": false
        }
    }
}
