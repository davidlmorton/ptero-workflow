{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "POST /v1/workflows",

    "type": "object",
    "properties": {
        "inputs": { "$ref": "#/definitions/inputDictionary" },
        "tasks": { "$ref": "#/definitions/taskDictionary" },
        "edges": { "$ref": "#/definitions/edgeList" },
        "parallelBy": { "$ref": "#/definitions/name" }
    },
    "required": ["inputs", "tasks", "edges"],
    "additionalProperties": false,

    "definitions": {
        "name": {
            "type": "string",
            "minLength": 1
        },

        "inputType": { "oneOf": [
            { "$ref": "#/definitions/name" },
            {
                "type": "array",
                "minItems": 0,
                "items": { "$ref": "#/definitions/inputType" }
            }
        ]},

        "inputDictionary": {
            "type": "object",
            "minProperties": 0,
            "patternProperties": {
                "^.+$": { "$ref": "#/definitions/inputType" }
            },
            "additionalProperties": false
        },

        "taskDictionary": {
            "type": "object",
            "minProperties": 0,
            "patternProperties": {
                "^.+$": { "$ref": "#/definitions/task" }
            },
            "additionalProperties": false
        },

        "task": {
            "type": "object",
            "properties": {
                "methods": {
                    "type": "array",
                    "minItems": 1,
                    "items": { "$ref": "#/definitions/method" }
                },
                "parallelBy": { "$ref": "#/definitions/name" }
            },
            "required": ["methods"],
            "additionalProperties": false
        },

        "method": { "oneOf": [
            { "$ref": "#/definitions/workflow" },
            { "$ref": "#/definitions/execution" }
        ]},

        "workflow": {
            "type": "object",
            "properties": {
                "tasks": { "$ref": "#/definitions/taskDictionary" },
                "edges": { "$ref": "#/definitions/edgeList" }
            },
            "required": ["tasks", "edges"],
            "additionalProperties": false
        },

        "execution": {
            "type": "object",
            "properties": {
                "name": { "$ref": "#/definitions/name" },
                "parameters": { "$ref": "#/definitions/inputDictionary" },
                "service": { "$ref": "#/definitions/name" }
            },
            "required": ["service"],
            "additionalProperties": false
        },

        "edgeList": {
            "type": "array",
            "minItems": 1,
            "items": { "$ref": "#/definitions/edge" }
        },

        "edge": {
            "type": "object",
            "properties": {
                "destination": { "$ref": "#/definitions/name" },
                "destinationProperty": { "$ref": "#/definitions/name" },
                "source": { "$ref": "#/definitions/name" },
                "sourceProperty": { "$ref": "#/definitions/name" }
            },
            "required": [
                "destination",
                "destinationProperty",
                "source",
                "sourceProperty"
            ],
            "additionalProperties": false
        }
    }
}
